# Polymarket Sports Betting App - Configuration
# Copy this file to .env and edit your settings.
# Never commit .env file (it contains secrets).

# === Required ===
# Your wallet address (EOA or Gnosis Safe proxy)
FUNDER_ADDRESS=your_wallet_address_here

# Your private key (keep secret! never share or commit)
PRIVATE_KEY=your_private_key_here

# === Optional - Bet settings ===
SPORTS_BET_AMOUNT=10.0
SPORTS_USE_MARKET_ORDER=true

# Only show live (in-progress) games; set false to include upcoming
SPORTS_LIVE_ONLY=true

# === Optional - Server ===
SPORTS_SERVER_PORT=5050
SPORTS_POLL_INTERVAL=0.5

# === Optional - Order limits (USD) ===
MAX_ORDER_SIZE_USD=100.0
MIN_ORDER_SIZE_USD=1.0
PRICE_SLIPPAGE=0.01

# === Optional - Polymarket sign-in ===
# 0=EOA (Wallets), 1=Email/Magic, 2=Browser proxy
SIGNATURE_TYPE=0

# === Optional - Polygon RPC (if needed) ===
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_KEY
